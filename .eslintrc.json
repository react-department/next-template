{
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": ["testing-library", "jest", "require-explicit-generics", "simple-import-sort"],
  "parser": "@typescript-eslint/parser",
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb-typescript",
    "plugin:import/typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "jsx-a11y/label-has-for": "off",
    "max-len": ["error", {
        "code": 120,
        "ignorePattern": "^import"
    }],
    "require-explicit-generics/require-explicit-generics": [
      "error",
      ["builder.query", "builder.mutation"]
    ],
    "simple-import-sort/imports": ["error", {
      "groups": [
        ["^\\u0000"], // side effect imports
        ["^react$", "^react-native$", "^react", "^@?\\w"], // libraries order
        ["^\\.\\.(?!/?$)", "^\\.\\./?$", // parent
          "^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"], // other reletions
        ["^@?\\w.*\\u0000$", "^[^.].*\\u0000$", "^\\..*\\u0000$"], // types
        ["^.+assets.+\\..+$"], // assets
        ["^.+\\.s?css$"]] // style
    }],
    "import/order": "off", // disable default import order rule to use simple-import-sort
    "radix": "off",
    "react/jsx-props-no-spreading": ["error", {
      "exceptions": ["input"]
    }],
    "react/jsx-no-leaked-render": "error",
    "react/jsx-handler-names": ["error", {
      "checkLocalVariables": true,
      "eventHandlerPrefix": "on"
    }],
    "@typescript-eslint/consistent-type-exports": "error",
    "@typescript-eslint/consistent-type-imports": "error",
    "@typescript-eslint/member-delimiter-style": ["error", {
      "multiline": {
        "delimiter": "comma"
      },
      "singleline": {
        "delimiter": "comma"
      }
    }],
    "react/react-in-jsx-scope": "off"
  },
  "overrides": [
    { //https://redux-toolkit.js.org/usage/immer-reducers#linting-state-mutations
      "files": [
        "src/**/**/slice.ts"
      ],
      "rules": {
        "no-param-reassign": ["error", { "props": false }]
      }
    },
    // Only uses Testing Library lint rules in test files
    {
      "files": [
        "**/__tests__/**/*.[jt]s?(x)",
        "**/?(*.)+(spec|test).[jt]s?(x)"
      ],
      "extends": ["plugin:testing-library/react"]
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "extends": [
        "airbnb-typescript",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
      ]
    }
  ]
}

